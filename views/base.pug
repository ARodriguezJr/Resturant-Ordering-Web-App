html
    head
        style
            include ../styles.css
            link(href="https://fonts.googleapis.com/css?family=Rubik&display=swap" rel="stylesheet")
            link(href="https://fonts.googleapis.com/css?family=Gupter&display=swap" rel="stylesheet")
            meta(name="viewport" content="width=device-width, initial-scale=1")
        block scripts
            script(type="text/javascript", src="../js/login.js")
            script(type="text/javascript", src="../js/loader.js")
            script(type="text/javascript", src="../js/ordering.js")
            //script(src="/socket.io/socket.io.js")
    body
        block topbar
            div(class="topbar")
                div(class="icon")
                    h1 RestaurSHOP
                //-div(class="login")
                    form(name="loginForm", id="loginForm")
                        input(type="text", name="username", id="username", value="Username" class="login-form")
                        input(type="password", name="login", id="password", value="Password" class="login-form")
                        button(type="button", onClick="submitLogin()") Login
        block navigation
            div(class="navbar")
                a(id="home-tab", class="nav-tab", href="/")
                    p Home
                a(id="catalog-tab", class="nav-tab", href="/catalog/catalog-home")
                    p Catalog
                a(id="contact-tab", class="nav-tab", href="/contact/contact-home")
                    p Contact Us
                a(id="My Account", class="nav-tab", href="/account/myAccount")
                    p My Account
            b
        block sidebar
        block content
        block footer
            div(class="footer")
                a(class="foot-link",href="/") Home 
                a(class="foot-link",href="/about/about-home") About 
                a(class="foot-link",href="/contact/contact-home") Contact 
                a(class="foot-link",href="/help/help-home") Help 
                a(class="foot-info",href="/help/terms-of-use") Terms & Conditions
                a(class="foot-info",href="/help/privacy") Privacy Policy
                
                    
                        

                        
                

                    

           

                  